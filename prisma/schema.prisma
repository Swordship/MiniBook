generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  clients   Client[]
  invoices  Invoice[]
}

model Client {
  id       String    @id @default(cuid())
  name     String
  user     User      @relation(fields: [userId], references: [id])
  userId   String
  invoices Invoice[]
}

model Invoice {
  id        String   @id @default(cuid())
  amount    Int
  status    String   @default("DRAFT") // e.g., DRAFT, SENT, PAID
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  client    Client   @relation(fields: [clientId], references: [id])
  clientId  String
  createdAt DateTime @default(now())
}